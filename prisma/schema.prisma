datasource db {
  provider          = "mongodb"
  url               = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  chair     String
  table     String
  location  String
  date      String
  time      String
  noOfChairs Int
  noOfCTables Int
  totalPrice Float
  user    User    @relation(fields: [userId], references: [user_id])
  userId  String
  status String
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id String @unique
  first_name   String
  last_name    String
  email        String
  image_url    String
  orders       Order[]
}

